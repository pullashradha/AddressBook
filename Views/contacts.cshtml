<head>
<!-- Link Bootstrap, Font Awesome & CSS Start -->
  <link href="../Content/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <link href="../Content/css/bootstrap-social.css" rel="stylesheet" type="text/css">
  <link href="../Content/font-awesome/css/font-awesome.min.css" rel="stylesheet">
  <link href="../Content/css/styles.css" rel="stylesheet" type="text/css">
<!-- Link Bootstrap, Font Awesome & CSS End -->
  <title>Address Book</title>
</head>
<body>
  <h1 class="page-header">Address Book - All Contacts</h1>
  @foreach (var contact in Model)
  {
    <h2>@contact.GetName()</h2>
    <ul>
      <li>@contact.GetPhoneNumber</li>
      <li>@contact.GetEmailAddress</li>
      <li>@contact.GetStreetAddress, @contact.GetStateAddress</li>
    </ul>
  }
  <form class="form-group" action="/contacts_deleted" method="post">
    <button type="submit" class="btn btn-danger" name="clear-all-btn" id="clear-all-btn">Clear Entire Address Book</button>
  </form>
</body>
